import("//build/test.gni")
import("//foundation/CastEngine/castengine_wifi_display/config.gni")

module_out_path = "sharing/protocol"

group("unittest") {
  testonly = true

  deps = [ ":rtmp_unit_test" ]
}

ohos_unittest("rtmp_unit_test") {
  module_out_path = module_out_path

  include_dirs = [
    "//utils/native/base/include",
    "$SHARING_ROOT_DIR/services",
  ]

  sources = [ "rtmp_unit_test.cpp" ]

  deps = [
    "$SHARING_ROOT_DIR/services/common:khsharing_common",
    "$SHARING_ROOT_DIR/services/network:khsharing_network",
    "$SHARING_ROOT_DIR/services/protocol/rtmp:khsharing_rtmp",
    "$SHARING_ROOT_DIR/services/utils:khsharing_utils",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [ "hilog:libhilog" ]

  subsystem_name = "castplus"
  part_name = "sharing_framework"
}
