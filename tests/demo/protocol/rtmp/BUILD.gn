import("//build/ohos.gni")
import("//foundation/CastEngine/castengine_wifi_display/config.gni")

config("sharing_rtmp_config") {
  include_dirs = [
    "$SHARING_ROOT_DIR/services/protocol/rtmp/include",
    "//utils/native/base/include",
    "$SHARING_ROOT_DIR/services",
    "$SHARING_ROOT_DIR/services/common",
    "$SHARING_ROOT_DIR/services/protocol",
  ]
}

ohos_executable("sharing_rtmp_push_demo") {
  configs = [ ":sharing_rtmp_config" ]

  sources = [ "rtmp_push_demo.cpp" ]

  deps = [
    "$SHARING_ROOT_DIR/services/common:sharing_common",
    "$SHARING_ROOT_DIR/services/network:sharing_network",
    "$SHARING_ROOT_DIR/services/protocol/rtmp:sharing_rtmp",
    "$SHARING_ROOT_DIR/services/utils:sharing_utils",
  ]

  external_deps = [ "hilog:libhilog" ]

  subsystem_name = "castplus"
  part_name = "sharing_framework"
}

ohos_executable("sharing_rtmp_play_demo") {
  configs = [ ":sharing_rtmp_config" ]

  sources = [ "rtmp_play_demo.cpp" ]

  deps = [
    "$SHARING_ROOT_DIR/services/common:sharing_common",
    "$SHARING_ROOT_DIR/services/network:sharing_network",
    "$SHARING_ROOT_DIR/services/protocol/rtmp:sharing_rtmp",
    "$SHARING_ROOT_DIR/services/utils:sharing_utils",
  ]

  external_deps = [ "hilog:libhilog" ]

  subsystem_name = "castplus"
  part_name = "sharing_framework"
}
